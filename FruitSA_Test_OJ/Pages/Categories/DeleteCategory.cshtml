@page
@model FruitSA_Test_OJ.Pages.Categories.DeleteCategoryModel
@*Page for Deleting Categories*@

<div class="card">
    <div class="card-header">
        <h1>Delete @Model.Category.Name</h1>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" id="deleteCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                           @Html.LabelFor(m => m.Category.Name)
                    </div>
                    <div class="col-sm-4">
                           @Html.TextBoxFor(m => m.Category.Name, new { @disabled = "true" })
                       </div>
                    <div class="col-sm-1">
                            @Html.LabelFor(m => m.Category.CategoryCode)
                    </div>
                    <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.Category.CategoryCode, new { @disabled = "true" })
                     </div>
                </div>
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                    <span asp-validation-for="Category.CategoryCode" class="text-danger"></span>
            </div>
            <p />
            <div class="row">
                <div class="col-sm-1">
                        @Html.CheckBoxFor(m => m.Category.IsActive)
                </div>
                <div class="col-sm-4">
                        @Html.LabelFor(m => m.Category.IsActive, new { @class = "checkbox", name = "activeCategory", @disabled = "true"})
                    </div>
            </div>
            <p />
            <div class="row">
                <div class="large-2 columns">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-page="./Category" class="btn btn-secondary ml-2">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>


