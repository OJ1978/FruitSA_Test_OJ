@page
@model FruitSA_Test_OJ.Pages.Categories.Category.CreateCategoryModel

@*Page for Creating Categories*@
<div class="card">
    <div class="card-header">
        <h1>Create Category</h1>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" id="createCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                          @Html.LabelFor(m => m.Category.Name)
                    </div>
                    <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.Category.Name, new { autocomplete = "off" })
                     </div>
                    <div class="col-sm-1">
                            @Html.LabelFor(m => m.Category.CategoryCode)
                    </div>
                    <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.Category.CategoryCode, new { autocomplete = "off" })
                    </div>
                </div>
                <span asp-validation-for="Category.Name" class="text-danger"></span>
                <span asp-validation-for="Category.CategoryCode" class="text-danger"></span>
            </div>
            <p />

                <div class="row">
                    <div class="col-sm-1">
                            @Html.CheckBoxFor(m => m.Category.IsActive)
                    </div>
                    <div class="col-sm-4">
                            @Html.LabelFor(m => m.Category.IsActive, new { @class = "checkbox", name = "activeCategory" })
                    </div>
                </div>

            <p />
            <div class="row">
                <div class="large-2 columns">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-page="./Category" class="btn btn-secondary ml-2">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

